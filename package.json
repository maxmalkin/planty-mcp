		"@types/jest": "^30.0.0",
		"@types/lodash": "^4.17.20",
		"@types/node": "^24.6.0",
		"@types/pg": "^8.15.5",
		"@types/supertest": "^6.0.3",
		"@types/uuid": "^11.0.0",
		"i": "^0.3.7",
